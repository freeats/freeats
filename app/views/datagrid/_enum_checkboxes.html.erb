%>
<div class="d-flex align-items-center h-100 grid-checkbox gap-2">
  <%- elements.each do |value, text, checked| -%>
    <%- id = [form.object_name, filter.name, value].join('_').underscore -%>
      <div class="form-check mb-0">
        <%= form.check_box(
              filter.name,
              options.merge({
                multiple: true,
                id:,
                checked:,
                include_hidden: false,
                class: "form-check-input",
              }),
              value.to_s,
              nil
            ) -%>
        <%= form.label filter.name, options.merge(for: id).merge(class: "form-check-label") do -%>
          <%= text -%>
        <%- end -%>
      </div>
  <%- end -%>
</div>
